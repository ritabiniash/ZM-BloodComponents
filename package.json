{
  "name": "blood-components",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "index.js",
  "workspaces": {
    "packages": [
      "packages/common",
      "packages/coordinator",
      "packages/donor",
      "packages/functions"
    ]
  },
  "scripts": {
    "cleanup": "scripts/cleanup.sh",
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build --stream",
    "postinstall": "yarn run build-common",
    "deploy-functions-qa": "firebase deploy --only functions -P staging",
    "deploy-functions-prod": "firebase deploy --only functions -P production",
    "deploy-donor-qa": "firebase deploy --only hosting:donor -P staging",
    "deploy-donor-prod": "firebase deploy --only hosting:donor -P production",
    "deploy-coordinator-qa": "firebase deploy --only hosting:coordinator -P staging",
    "deploy-coordinator-prod": "firebase deploy --only hosting:coordinator -P production",
    "build-common": "yarn workspace @zm-blood-components/common build",
    "start-coordinator": "yarn workspace @zm-blood-components/coordinator start",
    "start-donor": "yarn workspace @zm-blood-components/donor start",
    "style": "yarn run prettier --write . "
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "classnames": "^2.2.6",
    "dayjs": "^1.10.4",
    "firebase": "^8.2.4",
    "include-media": "^1.4.9",
    "lodash": "^4.17.20",
    "normalize.css": "^8.0.1",
    "react": "^17.0.1",
    "react-div-100vh": "^0.5.6",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.2",
    "semantic-ui-react": "^2.0.3",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "cross-env": "^7.0.3",
    "jest": "26.6.0",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "sass": "^1.32.6",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WebAhead5/Blood-Components.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WebAhead5/Blood-Components/issues"
  },
  "homepage": "https://github.com/WebAhead5/Blood-Components#readme"
}
