{
  "name": "@zm-blood-components/donor",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@capacitor/android": "^3.0.0-rc.0",
    "@capacitor/app": "^0.3.6",
    "@capacitor/core": "^3.0.0-rc.0",
    "@capacitor/haptics": "^0.3.6",
    "@capacitor/ios": "^3.0.0-rc.0",
    "@capacitor/keyboard": "^0.5.6",
    "@material-ui/icons": "^4.11.2",
    "@zm-blood-components/common": "^1.0.0",
    "dayjs": "^1.10.4",
    "jss-rtl": "^0.3.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^3.0.0-rc.0",
    "@storybook/addon-storyshots": "^6.1.21",
    "@types/classnames": "^2.2.11",
    "@types/node": "^12.0.0",
    "cordova-res": "^0.15.3",
    "react-test-renderer": "^17.0.2",
    "typescript-plugin-css-modules": "^3.2.0"
  },
  "scripts": {
    "-------------------DEV-------------------------": "",
    "start": "react-scripts start",
    "start-ios": "cap run ios",
    "start-android": "cap run android",
    "-------------------PRODUCTION------------------": "",
    "build": "run-s test-nowatch build-web sync-mobile build-android ",
    "build-web": "react-scripts build",
    "build-android": "te-node ./scripts/buildAndroid --alias donor --keystore 'store.keystore' --output 'release_<version>.apk'",
    "-------------------TESTING---------------------": "",
    "test": "react-scripts test",
    "test-nowatch": "yarn run test --watchAll=false",
    "-------------------MOBILE----------------------": "",
    "init-mobile:ios": "cap add ios",
    "init-mobile:android": "cap add android",
    "sync-mobile": "cap sync",
    "update-mobile-deps": "cap update",
    "generate-images:android": "node ./scripts/generateMobileImages.js --android --cleanup",
    "generate-images:ios": "node ./scripts/generateMobileImages.js --ios --cleanup",
    "-------------------MISC------------------------": "",
    "eject": "react-scripts eject",
    "style": "yarn prettier --write .",
    "storybook": "start-storybook -p 9009",
    "-----------------------------------------------": ""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.stories\\.tsx$": "@storybook/addon-storyshots/injectFileName",
      "^.+\\.(js|jsx|ts|tsx)$": "react-scripts/config/jest/babelTransform.js",
      "^.+\\.css$": "react-scripts/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "react-scripts/config/jest/fileTransform.js"
    }
  }
}
