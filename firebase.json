{
  "functions": {
    "source": "packages/functions/dist",
    "predeploy": [
      "yarn run build-common",
      "yarn workspace @zm-blood-components/functions bundle"
    ]
  },
  "hosting": [
    {
      "target": "donor",
      "public": "packages/donor/build",
      "predeploy": [
        "yarn run build-common",
        "yarn workspace @zm-blood-components/donor build"
      ],
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "coordinator",
      "public": "packages/coordinator/build",
      "predeploy": [
        "yarn run build-common",
        "yarn workspace @zm-blood-components/coordinator build"
      ],
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
